pipeline {
  agent any 
  tools {
    maven 'M2_HOME'
    jdk 'JAVA_HOME'
  }
  stages {
 
    stage("Mvn clean") {
      
      steps {
        echo 'cleaning the application ...'
        sh "mvn clean"
      }
    }
    stage("Mvn compile") {
      
      steps {
        echo 'compiling the application ...'
        sh "mvn compiler:compile"
      }
    }

	stage("Mvn test") {
      
      steps {
        sh "mvn test"
      }
    }
	stage("MVN SONARQUBE"){
   steps{
   sh "mvn sonar:sonar \
   -Dsonar.projectKey=Iheb \
   -Dsonar.host.url=http://192.168.100.2:9000 \
   -Dsonar.login=b14f2e7630f5f10c92fa8bb7b93c76d30994bd51"
  }
}
stage("Nexus") {
      
      steps {
        sh "mvn deploy -e"
      }
    }
stage("Building Docker Image") {
                steps{
                    sh 'docker build -t ihebsaadaoui/achat .'
                }
        }

           stage("Login to DockerHub") {
                steps{
                   // sh 'sudo chmod 666 /var/run/docker.sock'
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u ihebsaadaoui -p Taraji1919'
                }
        }
        stage("Push to DockerHub") {
                steps{
                    sh 'docker push ihebsaadaoui/achat'
                }
        }
    
               stage("Docker-compose") {
                steps{
                    sh 'docker-compose up -d'
                }
        }
 }
post {
        success {
             mail to: "ihebsaadaoui2@gmail.com",
                    subject: "Build sucess",
                    body: "sucess"
            echo 'successful'
        }
        failure {
             mail to: "ihebsaadaoui2@gmail.com",
                    subject: "Build failed",
                    body: "failed"
            echo 'failed'
        }
      }

}
